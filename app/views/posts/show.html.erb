<h1>
  <%= @post.title %>
</h1>

<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> ago.</p>

<p class="body">
  <%= @post.body %>
</p>

<% if user_signed_in? %>
  <small><%= link_to "Edit", edit_post_path(@post) %></small> | 
  <small><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %></small>
<% end %>

<div class="comments">
    <h3><%= pluralize(@post.comments.count, "comment") %> :</h3>
    <%= render @post.comments %>

    <% if user_signed_in? %>
      <h3>Add a comment : </h3>
      <%=render "comments/form" %>
    <% end %>
</div>